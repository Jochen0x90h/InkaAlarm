<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/row"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<EditText
		android:id="@+id/name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:hint="name"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Spinner
			android:id="@+id/ringtone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/test_ringtone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@mipmap/ic_play_circle_outline_black_24dp"
			style="?android:attr/borderlessButtonStyle"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<Spinner
				android:id="@+id/node"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
			<SeekBar
				android:id="@+id/blinds"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="99"/>
			<SeekBar
				android:id="@+id/slat"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="99"/>

			<!-- EditText
				android:id="@+id/host"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="192.168.1.181:8083"
				android:hint="host:port"/>
			<EditText
				android:id="@+id/command"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:hint="set Lamp1 on; set Lamp2 on"/ -->
		</LinearLayout>
		<ImageButton
			android:id="@+id/test_command"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@mipmap/ic_play_circle_outline_black_24dp"
			style="?android:attr/borderlessButtonStyle"/>
	</LinearLayout>

</LinearLayout>
